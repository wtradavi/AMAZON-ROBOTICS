      ssh root@kdu-$i '/sbin/reboot & exit'
    done
  elif [[ $ANSWER = "n" ]] || [[ $ANSWER = "N" ]]; then
    logo
    echo -ne $RS"\nDrive: ";
    read -r du;
    echo "\nRebooting Drive $i\n"
    ssh root@kdu-$du '/sbin/reboot & logout'
  fi
  
  go_back_or_exit
}

function autoprovision_remote {
	logo
 	echo -e $RS"AutoProvision Selected Drive(s)? y/n"$CE	
	prompt_num
	logo
	echo -ne $RS"\nGood Drive: "$CE
	read -r goodDrive
	echo -e $RS"\nGathering All The Files from Drive $goodDrive\n"$CE
	ssh root@kdu-$goodDrive "mkdir /tmp/files; cp /etc/ksk/ksk.txt /etc/wpa_supplicant/wpa_supplicant.conf /etc/wpa_supplicant/amazon.pem /tmp/files"

	if [[ $ANSWER = "y" ]] || [[ $ANSWER = "Y" ]]; then
		for i in $du; do
			echo -e $RS"\nTransferring Files to Drive $i\n"$CE
			scp root@kdu-$goodDrive:/tmp/files root@kdu-$i:/tmp/files
			echo -e $RS"\nPlacing Files In Correct Directories\n"$CE
			ssh root@kdu-$i "mv /tmp/files/ksk.txt /etc/ksk/ksk.txt; mv /tmp/files/wpa_supplicant.conf /etc/wpa_supplicant/wpa_supplicant.conf; mv /tmp/files/amazon.pem /etc/wpa_supplicant/amazon.pem; /sbin/reboot & exit"
		done
	elif [[ $ANSWER = "n" ]] || [[ $ANSWER = "N" ]]; then
		logo
		echo -ne $RS"\nDrive : "$CE
		read -r du
		echo -e $RS"\nTransferring Files to Drive $i\n"$CE
		scp root@kdu-$goodDrive:/tmp/files root@kdu-$du:/tmp/files
		echo -e $RS"\nPlacing Files In Correct Directories\n"$CE
		ssh root@kdu-$du "mv /tmp/files/ksk.txt /etc/ksk/ksk.txt; mv /tmp/files/wpa_supplicant.conf /etc/wpa_supplicant/wpa_supplicant.conf; mv /tmp/files/amazon.pem /etc/wpa_supplicant/amazon.pem; /sbin/reboot & exit"

	else	
		go_back_or_exit
	fi
	go_back_or_exit
}


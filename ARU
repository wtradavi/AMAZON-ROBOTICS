function batch_mode {
  logo
  echo -n "Create A Name for Your Batch List: "
  read -r batch_name
  batches+=($batch_name)
  i=0
  echo -n "Drives: "
  read -A drives
  logo
  columnize 10 "Drive" "Wifi"
  for drive in ${drives[@]}; do
    let "i=i+1"
    #ksk1=$(md5sum etc/ksk/ksk.txt | cut -d " " -f 1)
    #ksk2=$(md5sum etc2/ksk/ksk.txt | cut -d " " -f 1)
    #pem1=$(md5sum etc/wpa_supplicant/amazon.pem | cut -d " " -f 1)
    #pem2=$(md5sum etc2/wpa_supplicant/amazon.pem | cut -d " " -f 1)
    #wpa1=$(md5sum etc/wpa_supplicant/wpa_supplicant.conf| cut -d " " -f 1)
    #wpa2=$(md5sum etc2/wpa_supplicant/wpa_supplicant.conf | cut -d " " -f 1)
    packet_loss=$(ping -w 1 -c 2 kdu-$drive | grep received | cut -d "," -f 3 | cut -d "%" -f 1)
    columnize 10 "$(echo -e $YS $i $CE)" "$drive" "$(if [[ $packet_loss == *"100"* ]]; then echo -e $RS"$(( 100 - $packet_loss))%"$CE; else echo -e $GNS"$(( 100 - $packet_loss))%"$CE; fi)"
  done
  echo -n "Select: "
  read -A selections
  for select in ${selections[@]}; do
    eval $batch_name'+=('${drives[$select]}')'
  done
  menu
}

function delete_list {
  batches=(${batches[@]/$batchlist})
  unset batchlist
  menu
}

function delete_drive {
  for i in $du; do
    eval $batchlist'=(${'$batchlist'[@]/$i})'
  done
  menu
}

function add_drive {
  eval $batchlist'+=($(eval echo '${du[@]}'))'
}

function clear_selection {
  du=()
  for i in a b c d e f g h i j k l m n o p q r s t u v w x y z; do
    eval unset ${i}2_enabled
  done
  menu
}

function select_all {
  du=($(eval echo '${'$batchlist'[4]}'))
  for i in a b c d e f g h i j k l m n o p q r s t u v w x y z; do
    eval ${i}2_enabled="true"
  done
  menu
}



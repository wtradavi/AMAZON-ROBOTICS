function reboot_remote {
  logo
  echo -e $RS"Charge Selected Drive(s)? y/n"$CE
  prompt_num

  if [[ $ANSWER = "y" ]] || [[ $ANSWER = "Y" ]]; then
    logo
    for i in $du; do

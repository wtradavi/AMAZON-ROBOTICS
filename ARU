  	read_input
  	options
	fi
}



#---------Functions-----------------------------------------------------
function go_back_or_exit {
	printf "Press $YS [b] $CE to go back...\n"
	printf "Press $YS any key $CE to exit\n"
  if [ "$HOST" = ar-movement-syr1-node1.syr1.amazon.com ]; then
    read -k 1 ANSWER
  else
    read -n 1 ANSWER
  fi
	if [[ "$ANSWER" = "b" ]]; then
    batchlist=
    $back
	else
    clear
    batchlist=
		exit
	fi
}

function ping_drive {
  logo
  echo -e $RS"1- Hide The Bullshit"$CE
  echo -e $RS"2- Show Everything"$CE
  prompt_num
  logo
  last=$du
  if ! [[ $(echo ${du[@]} | grep '[0-9]') ]]; then
  	echo -e $RS"What is the Drive Number That You Would like to Ping?"$CE
  	read - A du
  fi
  if [[ $du = "last" ]]; then
    du=($last)
  fi
  logo
  if [[ $ANSWER = 1 ]]; then
    for drive in ${du[@]}; do
      echo -e $FONTC"This Drive Has Received "$CE $GNS$( 100 - $(ping -c 3 kdu-$drive | grep received | cut -d "," -f 3 | cut -d "%" -f 1))"%"$CE $FONTC" of Packets that It Transmitted."$CE
    done
  elif [[ $ANSWER = 2 ]]; then
    for drive in ${du[@]}; do
      ping -c 3 kdu-$drive
    done
  else
    echo -e $RS"Something Went Wrong"
    go_back_or_exit
  fi
	go_back_or_exit
}

function ssh_connect {
  logo
  last=$du
	echo -e $RS"\nWhat is the Drive Number That You Would like to SSH Into?"$CE
	read du
  if [[ $du = "last" ]]; then
    du=$last
  fi
	logo
  scp /tmp/ARU root@kdu-$du:/tmp/ARU
	ssh root@kdu-$du
	menu
}

function charge_drive {
	function prompt_floor {
    logo
		echo -e $RS"\nWhat Floor is The Drive On [i.e., 1-5]?"$CE
  	read floor
  	if [ $floor -ge 6 ]; then
	  	clear
	  	echo "You must enter a Number 1-5:"
	  	charge_drive
  	else
		prompt_drive
		fi
	}
	function prompt_drive {
    logo
    last=$du
		echo -e $RS"\nWhat is the Drive Number That You Would like to Send To The Charger?"$CE
  	read du
    if [[ $du = "last" ]]; then
      du=$last
    fi
  	if [ $(echo $du | wc -c) -ne 7 ]; then
  		echo "The Drive Number is a Six-Digit Number. Please Try Agan."
  		prompt_drive
  	else
	  	prompt_charger
		fi
	}
	function prompt_charger {
    logo
		echo -e $RS"\nWhat Charger Would You like to Send It To?"$CE
		read charger_unit
		if [ $charger_unit = "" ]; then
		  	clear
		  	echo "You must enter a Valid Number"
			prompt_charger
	  	else
			prompt_time
		fi
	}
	function prompt_time {
    logo
		echo -e $RS"\nHow Long Do You Want It To Charge For?"$CE
		read time
		if [ $time -ge 180 ]; then
		  	clear
		  	echo "You must enter a Number 1-180s:"
		  	prompt_time
	  	else
			execute
		fi
	}
	function execute {
		sudo -u kivasvs /apollo/env/FCXInfra/fwbin/chargeDrive.py -u $USER -c AMZN -w SYR1 -z $(if [ $floor -le 5 ] &&  [ $floor -ge 2 ]; then echo "paKivaA0"$floor; elif [ $floor -eq 1 ]; then echo "saKivaA0"$floor; else echo "You must enter a Number 1-5:"; charge_drive; fi) -drive $du -charger $charger_unit -t $time && echo "The Command Has Succesfully Been Sent"
		go_back_or_exit
	}
	prompt_floor
}

function firmware_update_remote {
	function prompt_drive {
    logo
    last=$du
  	echo -e $RS"\nWhat is the Drive Number That You Would like to Update?"$CE
  	read du
    if [[ $du = "last" ]]; then
      du=$last
    fi
  	if [ $(echo $du | wc -c) -ne 7 ]; then
  		echo "The Drive Number is a Six-Digit Number. Please Try Agan."
  		prompt_drive
  	else
	  	prompt_version
		fi
	}
	function prompt_version {
      logo
		  echo -e $RS"\nWhat is the Current Version of Firmware You Are Updating The Drive To [Default=22.0]?"$CE
	  	read version
	  	if [[ $version -eq 0 ]]; then
	  		version=22.0
	  		execute
	  	else
		  	execute
		fi
	}
	function execute {
    logo
		cd /apollo/env/FCXInfra/var/fcxfw/$version && sudo -u kivasvs ./update_drive.sh kdu-$du && echo "The Update was Successful"
		go_back_or_exit
	}
	prompt_drive
	prompt_version
}

function resetwifiremote {
	function prompt_drive {
    logo
    last=$du
		echo -e $RS"\nWhat is the Drive Number That You Would like to Reset The Wifi on?"$CE
		read du
    if [[ $du = "last" ]]; then
      du=$last
    fi
		if [ $(echo $du | wc -c) -ne 7 ]; then
			echo "The Drive Number is a Six-Digit Number. Please Try Agan."
			prompt_drive
		else
			prompt_version
		fi
		}
	sudo -u kivasvs /apollo/env/FCXInfra/bin/mduexec -d kdu-$du -c 'reset_wifi_config; exit;' -P 50
  go_back_or_exit
}


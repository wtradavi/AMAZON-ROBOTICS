function drive_template {
    logo
    echo -e $RS"SSH Selected Drive(s)? y/n"$CE
    prompt_num

    if [[ $ANSWER = "y" ]] || [[ $ANSWER = "Y" ]]; then
        for drive in ${du[@]}; do
           #command
        done    
    elif [[ $ANSWER = "n" ]] || [[ $ANSWER = "N" ]]; then
        logo
        echo -e $RS"\nWhat is the Drive Number(s) That You Would like to SSH Into?"$CE
        read du
        #command
    fi
}

function station_template {
    logo
    echo -ne $RS"\nStation #: "$CE;
    read -r su;
    fu=$su[1]
    logo
    echo -e $RS"\nRebooting Station $su\n"$CE
    #command
    go_back_or_exit
}


function error_codes { 
    grep cause /var/log/dusc.log
    grep warn /var/log/dusc.log
    grep error /var/log/dusc.log
    grep fault /var/log/dusc.log
    grep ARIMA /var/log/dusc.log
}

function unstuck_drive {
    logo
    echo -e $RS"SSH Selected Drive(s)? y/n"$CE
    prompt_num

    if [[ $ANSWER = "y" ]] || [[ $ANSWER = "Y" ]]; then
        for drive in ${du[@]}; do
            ssh root@kdu-$i "sudo mkdir -p /var/log/kiva; /sbin/reboot & exit"
        done 
    elif [[ $ANSWER = "n" ]] || [[ $ANSWER = "N" ]]; then
        ssh root@kdu-$du "sudo mkdir -p /var/log/kiva; /sbin/reboot & exit"
    fi
}


function drive_prompt {
    logo
    echo -ne $RS"\nDrive(s): "$CE
    read -A du
}

function choose_selected_prompt {
    logo
    echo -e $RS"\n$1 Selected Drive(s)? y/n"$CE
    prompt_num
}

function transfer_menu_prompt {
    echo -e $RS"\nWould You like to Transfer this Menu To The Drive(s)? y/n"$CE
    read menu_y_or_no
}

function good_drive_prompt {
    logo
    echo -ne $RS"\nGood Drive #: "$CE;
    read -r goodDrive;
}

function station_prompt {
    logo
    echo -ne $RS"\nStation : "$CE;
    read -r su;
    fu=$su[1]
}


function delete_drive {
  for drive in $du; do
    eval $batchlist'=(${'$batchlist'[@]/$drive})'
  done
  i=0
  for var in a b c d e f g h i j k l m n o p q r s t u v w x y z; do
    let "i=i+1"
    if [ ${var}2_enabled = "true" ]; then 
        du=(${du[@]/$(eval echo '${'$batchlist'[$i]}')})
    fi
  done
  save_batch_lists
  menu
}